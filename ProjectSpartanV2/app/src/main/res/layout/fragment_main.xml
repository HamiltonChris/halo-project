<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/menubutton0"
                android:onClick="vitals"
                android:text="@string/menu_item_0"
                android:layout_width="600px"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/menubutton1"
                android:onClick="cooling"
                android:text="@string/menu_item_1"
                android:layout_width="600px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/menubutton2"
                android:onClick="lighting"
                android:text="@string/menu_item_2"
                android:layout_width="600px"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/menubutton3"
                android:onClick="radar"
                android:text="@string/menu_item_3"
                android:layout_width="600px"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/menubutton4"
                android:onClick="settings"
                android:text="@string/menu_item_4"
                android:layout_width="600px"
                android:layout_height="match_parent" />
        </LinearLayout>
        </HorizontalScrollView>

</RelativeLayout>
