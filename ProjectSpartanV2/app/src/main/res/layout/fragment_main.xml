<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">

    <com.haloproject.projectspartanv2.TopBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainmenubar"
        app:bluetoothOn="true"
        app:menuName="Main Menu"
        android:layout_alignParentStart="true" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/mainmenubar"
        android:scrollbars="none"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30px"
                android:paddingTop="20px"
                class="com.haloproject.projectspartanv2.MainButton"
                app:String="VITALS"
                app:Icon="@drawable/vital_icon"
                android:id="@+id/menuButton1"
                android:onClick="vitals" />

            <view
                class="com.haloproject.projectspartanv2.MainButton"
                app:String="COOLING"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30px"
                android:paddingTop="20px"
                android:id="@+id/menuButton2"
                android:onClick="cooling" />

            <view
                class="com.haloproject.projectspartanv2.MainButton"
                app:String="LIGHTING"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30px"
                android:paddingTop="20px"
                android:id="@+id/menuButton3"
                android:onClick="lighting" />

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30px"
                android:paddingTop="20px"
                class="com.haloproject.projectspartanv2.MainButton"
                app:String="RADAR"
                android:id="@+id/menuButton4"
                android:onClick="radar" />

            <view
                class="com.haloproject.projectspartanv2.MainButton"
                app:String="SETTINGS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30px"
                android:paddingTop="20px"
                android:id="@+id/menuButton5"
                android:onClick="settings" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
